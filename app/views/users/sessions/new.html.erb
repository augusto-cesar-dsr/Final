  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1>Login</h1>
    
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Username", required:"" %>
    </div>
    
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password", required:"" %>
    </div>
    

    <div class="text-center">
      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-default submit" %>
      </div>
    </div>

