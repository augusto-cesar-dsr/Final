<div class="row">
  <div class="col-lg-12">
    <div class="panel-default">
      <div class="panel-heading">
        Please, enter your details and save to update them.
      </div>
      </br>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">

            <%= form_with(model: [ :admins_backoffice, @admin], local: true) do |form| %>
              
              <div class="form-group">
                <%= form.label :email %>
                <%= form.text_field :email, class:"form-control", placeholder:"name@example.com" %>
              </div>
              
              <div class="mb-3">
                <%= form.label :password %>
                <%= form.text_field :password, class:"form-control", type:"password", placeholder:"Password" %>
              </div>
              
              <div class="mb-3">
                <%= form.label :password_confirmation %>
                <%= form.text_field :password_confirmation, class:"form-control", type:"password", placeholder:"Password confirmation" %>
              </div>

              <button type="submit" class="btn btn-primary">Save</button>
            <% end %>
          
          </div>
        </div>
      </div>
    </div>
  </div>
</div>